<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="default">
    <FaultRules>
        <FaultRule name="BadRequest-400">
            <Step>
                <Name>JavaScript-1</Name>
            </Step>
            <Condition>(response.status.code=400)</Condition>
        </FaultRule>
        <FaultRule name="BadRequest-401">
            <Step>
                <Name>JavaScript-2</Name>
            </Step>
            <Condition>(response.status.code=401)</Condition>
        </FaultRule>
    </FaultRules>
    <DefaultFaultRule name="default-error-message">
        <Step>
            <Name>JavaScript-3</Name>
        </Step>
    </DefaultFaultRule>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <Flows/>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPTargetConnection>
        <URL>https://httpbin.org/get</URL>
    </HTTPTargetConnection>
</TargetEndpoint>